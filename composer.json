{
	"name": "lonnieezell/bonfire",
	"type": "project",
	"description": "Drop-in admin panel form CodeIgniter 4",
	"keywords": [
		"codeigniter",
		"codeigniter4",
		"bonfire"
	],
	"homepage": "https://github.com/lonnieezell/bonfire2-refactor",
	"license": "MIT",
	"require": {
		"php": "^7.4 || ^8.0",
		"ext-json": "*",
		"codeigniter4/framework": "^4.2",
		"components/font-awesome": "^6.1",
		"league/commonmark": "^2.0",
		"codeigniter4/shield": "^1.0.0",
		"roave/security-advisories": "dev-latest",
		"spatie/commonmark-highlighter": "^3.0",
		"tatter/alerts": "^3.0"
	},
	"require-dev": {
		"codeigniter/coding-standard": "^1.1",
		"fakerphp/faker": "^1.9",
		"mikey179/vfsstream": "^1.6",
		"nexusphp/cs-config": "^3.1",
		"nexusphp/tachycardia": "^1.0",
		"phpstan/phpstan": "^1.1",
		"phpunit/phpunit": "^9.1",
		"psr/container": "^1.0"
	},
	"suggest": {
		"ext-fileinfo": "Improves mime type detection for files"
	},
	"autoload": {
		"psr-4": {
			"Bonfire\\": "src"
		},
		"exclude-from-classmap": [
			"**/Database/Migrations/**"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests",
			"Tests\\Support\\": "tests/_support"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"scripts": {
		"analyze": "phpstan analyze",
		"ci": [
			"Composer\\Config::disableProcessTimeout",
			"@deduplicate",
			"@analyze",
			"@test",
			"@inspect",
			"@style"
		],
		"deduplicate": "phpcpd src/",
		"inspect": "deptrac analyze --cache-file=build/deptrac.cache",
		"style": "php-cs-fixer fix --verbose --ansi --using-cache=no",
		"test": "phpunit"
	},
	"support": {
		"forum": "http://forum.codeigniter.com/",
		"source": "https://github.com/lonnieezell/bonfire2-internals"
	}
}
